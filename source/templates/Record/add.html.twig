{% extends "base.html.twig" %}

{% block title %}Records{% endblock %}

{% block content %}

<div class="mt-5">
    <div class="mr-auto ml-auto text-center">
        <h1>Add new Record</h1>
    </div>
</div>
<form class="form" role="form" autocomplete="off" id="addRecord" method="POST">
    <div class="form-group">
        <label for="key">Key</label>
        <input type="text" class="form-control form-control-lg" name="key" id="key" required="">
        <div class="invalid-feedback">Oops, you missed this one.</div>
    </div>
    <div class="form-group mt-3">
        <label for="meaning">Meaning</label>
        <textarea class="form-control form-control-lg" id="meaning" name="meaning"></textarea>
        <div class="invalid-feedback">Enter your password too!</div>
    </div>
    <div class="form-group mt-3">
        <button type="submit" class="btn btn-success btn-lg float-end" id="btnLogin">Login</button>
    </div>
</form>

{% endblock %}
